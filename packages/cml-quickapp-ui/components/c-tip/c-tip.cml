  background-color: rgba(74, 76, 91, 0.8);
}
.tip-close {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 76cpx;
  padding: 20cpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tip-content {
  font-size: 24cpx;
}
</style>
