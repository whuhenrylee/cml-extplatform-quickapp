<template>
  <view class="c-container" style="{{containerStyle}}">
    <slot></slot>
  </view>
</template>
<script>
  class CContainer implements ContainerInterface {

    props = {
      direction: {
        type: String,
        default: 'row'
      }
    }
    computed = {
      containerStyle() {
        let style = ''
        if (this.direction === 'column') {
          style += `flex-direction: column`
        } else {
          style += `flex-direction: row`
        }
        return style
      }
    }
  }
  export default new CContainer()
</script>
